@model Dictionary.Models.IndexHomeModel
@{
    ViewData["Title"] = "Home Page";
}
@{var firstElement = Model.WordsToLearn.FirstOrDefault(); }

<link href="~/css/main.css" rel="stylesheet" />
<!-- Home -->
<article id="top" class="wrapper style1">
    <div class="container">
        <div class="row">
            <div class="col-4 col-5-large col-12-medium">
                <span class="image fit"><img src="images/logo-main.png" alt="" /></span>
            </div>
            <div class="col-8 col-7-large col-12-medium">
                <header>
                    <h1><strong>Привіт</strong> від словника!</h1>
                </header>
                <p>Witaj na stronie słownika, gdzie bezpłatnie można uczyć się języka Ukraińskiego. Konieczne jest zarejestrowanie się, aby można zapisać wyuczone określenia</p>
                <a href="#work" class="button large scrolly">Zapoznaj się z alfabetem</a>
            </div>
        </div>
    </div>
</article>

<!-- Work -->
<article id="work" class="wrapper style2">
    <div class="container">
        <header>
            <h2>Alfabet</h2>
            <p>Jest przedstawiony alfabet Ukrainski!</p>
        </header>
        <div class="row aln-center">
            <div class="col-4 col-6-medium col-12-small">
                <img src="images/alfabet.png">
            </div>
        </div>
        <footer>
            <a href="#portfolio" class="button large scrolly">Przejdź do nauki słów</a>
        </footer>
    </div>
</article>

<!-- Portfolio -->
<article id="portfolio" class="wrapper style3">
    <div class="container justify-content-center">
        <header>
            <h2>Uczymy się Ukraińskich słów</h2>
            <p>Poniżej jest przedstawione zdjęcie do słowa, słowo po Polsku, słowo po Ukrainsku i jego transkrypcja.</p>
        </header>

        <div id="carouselExampleControls" class="carousel">
            <div class="carousel-inner">

                @foreach (var word in Model.WordsToLearn)
                {
                    var activeClass = firstElement == word ? "active" : string.Empty;
                    <div class="carousel-item @activeClass">

                        <div class="justify-content-center">
                            <div class="row justify-content-center">
                                <img style="height: 400px !important;" src="@word.ImagePath" />
                            </div>
                            <div class="row justify-content-center">
                                <h5>@word.PlText</h5>
                            </div>
                            <div class="row justify-content-center">
                                <h5>@word.UaText</h5>
                            </div>
                            <div class="row justify-content-center">
                                <p class="transcription">[@word.Transcription]</p>
                            </div>
                        </div>
                        <footer>
                            <p>Zapisać słowo, do kategotii wyuczone | <a class="login-link" asp-action="AddWord" asp-route-id="@word.Id">Zapisz</a></p>
                        </footer>
                    </div>


                };

            </div>
            <a class="carousel-control-prev" style=" filter: invert(100%);" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" style=" filter: invert(100%);" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <footer>
            <a href="#contact" class="button large scrolly">Przejdź do zapisanych słów</a>
        </footer>

    </div>
</article>

<!-- Contact -->
<article id="contact" class="wrapper style4">
    <div class="container medium">
        <header>
            <h2>Słowa zapisane</h2>
            <p>Tutaj umieszczone są słowa, których się nauczyłeś</p>
        </header>
        <div class="row">
            <div class="col-12">
                <form method="post" action="#">
                    <div class="row">
                        <div class="col-12">
                           
                            <ul style="list-style-type: none; columns: 3; -webkit-columns: 3; -moz-columns: 3; ">
                                @foreach (var word in Model.UserWords)
                                {                                 
                                    <li>@word.PlText  <a class="login-link" asp-action="Delete" asp-route-id="@word.Id">x</a></li>
                                }
                            </ul>
                        </div>
                        <div class="col-12">
                            <ul class="actions" >
                                <li><input type="button" value="@Model.RateOfTest %" title="Kiedy będzie 75%, odblokuję się test końcowy." /></li>
                                @if (Model.IsTestAvaible)
                                {
                                    <li><a class="btn alt" asp-action="TestingPage">Zdać test</a> </li>
                                }

                            </ul>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <footer>
            <ul id="copyright">
                <li>&copy; Dictionary. All rights reserved.</li>
                <li>Email: w61863@student.wsiz.edu.pl</li>
            </ul>
        </footer>
    </div>
</article>

<!-- Scripts -->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.scrolly.min.js"></script>
<script src="~/js/browser.min.js"></script>
<script src="~/js/breakpoints.min.js"></script>
<script src="~/js/util.js"></script>
<script src="~/js/main.js"></script>
